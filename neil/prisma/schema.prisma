generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEXT_PUBLIC_DATABASE_URL")
  directUrl = env("NEXT_PUBLIC_DIRECT_URL")
}

model Player {
  id              String  @id @unique
  name            String
  nickname        String
  email           String
  avatarUrl       String
  customAvatarUrl String?
  customSound     String?
  games           Games[] @relation("GamesToPlayer")
}

model Games {
  id     String   @id @unique
  player Player[] @relation("GamesToPlayer")
}
